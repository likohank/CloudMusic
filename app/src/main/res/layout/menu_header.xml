<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="173dp"
    android:gravity="bottom"
    android:orientation="vertical"
    android:layout_marginBottom="8dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/imgBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_banner"/>
        <com.meg7.widget.CircleImageView
            android:id="@+id/imgAvatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="@dimen/font_size_f6_12dp"
            android:src="@drawable/placeholder_avatar_108" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgAvatar"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="水煮大冬瓜"
                android:layout_marginLeft="@dimen/font_size_f6_12dp"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/drawerUserLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:background="@drawable/topinfo_tag_lv"
                android:gravity="center"
                android:paddingLeft="4.0dip"
                android:paddingRight="4.0dip"
                android:singleLine="true"
                android:text="Lv.5"
                android:textColor="@color/theme_color_fff"
                android:textSize="10.0sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <TextView
            android:id="@+id/drawerUserSignIn"
            android:layout_width="wrap_content"
            android:layout_height="32.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginBottom="20dp"
            android:background="@drawable/main_drawer_header_btn_selector"
            android:drawableLeft="@drawable/btn_login_icn_jifen"
            android:drawablePadding="4.0dip"
            android:gravity="center"
            android:paddingLeft="11.0dip"
            android:paddingRight="11.0dip"
            android:singleLine="true"
            android:text="@string/signIn"
            android:textColor="@color/theme_color_fff"
            android:textSize="12.0dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</RelativeLayout>